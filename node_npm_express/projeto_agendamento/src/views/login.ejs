    <%- include('includes/head') %>
    <%- include('includes/nav') %>

    <div class="container">
      <div class="row">
        <div class="col-lg-2"></div>

        <div class="col-lg-8 my-3">
          <h1 class="text-center">Criar conta ou Entrar</h1>
          <p class="text-center lead">Faça login ou crie a sua conta abaixo</p>
          
          <div class="row">

            <div class="col-lg">
              <h4>Faça o seu cadastro</h4>
              <p>Se você ainda não tem conta, preeencha o formulário abaixo.</p>

              <form action="/login/register" method="POST">
                <input type="hidden" name="_csrf" value= <%= csrfToken%>>
                <div class="mb-3 mt-3">
                  <label class="form-label">Cadastrar E-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="mb-3">
                  <label class="form-label">Cadastrar sua senha</label>
                  <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-dark">Resgistrar</button>

              </form>

            </div>
            <div class="col-lg">
              <h4>Faça seu Login</h4>
              <p>Se você já tem uma conta, faça o login abaixo: </p>

              <form action="/login/login" method="POST">
                <input type="hidden" name="_csrf" value= <%= csrfToken%>>
                <div class="mb-3 mt-3">
                  <label class="form-label">Seu E-mail</label>
                  <input type="email" class="form-control" name="email">
                </div>

                <div class="mb-3">
                  <label class="form-label">Senha</label>
                  <input type="password" class="form-control" name="password">
                </div>

                <button type="submit" class="btn btn-dark">Entrar</button>

              </form>
            </div>
          </div>
        </div>  
        
        

        <div class="col-lg-2"></div>
      </div>
    </div>

    <%- include('includes/footer') %>